#!/bin/sh
file="$1"
shift
exec sed '
/ I /s/^... \(... .. ..:..\):.. .... I \(.*\)/\1 [1;36m\2[0m/;t
/ D /s/^... \(... .. ..:..\):.. .... D \(.*\)/\1 [0m\2[0m/;t
/ P /s/^... \(... .. ..:..\):.. .... P \(.*\)/\1 [1;37m\2[0m/;t
/ A /s/^... \(... .. ..:..\):.. .... A \(.*\)/\1 [1;32m\2[0m/;t
/ V /s/^... \(... .. ..:..\):.. .... V \(.*\)/\1 [32m\2[0m/;t
/ R /s/^... \(... .. ..:..\):.. .... R \(.*\)/\1 [32m\2[0m/;t
/ T /s/^... \(... .. ..:..\):.. .... T \(.*\)/\1 [33m\2[0m/;t
/ C /s/^... \(... .. ..:..\):.. .... C \(.*\)/\1 [31m\2[0m/;t
/ W /s/^... \(... .. ..:..\):.. .... W \(.*\)/\1 [1;31m\2[0m/;t
/ M /s/^... \(... .. ..:..\):.. .... M \(.*\)/\1 [34m\2[0m/;t
s/^... \(... .. ..:..\):.. .... . \(.*\)/\1 [0m\2[0m/
' "$file" | less -R "$@"
